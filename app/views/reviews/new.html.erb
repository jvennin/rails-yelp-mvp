<div class="container mt-5 col-4">
<h1>Add a review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
  <%= link_to restaurants_path do %>
  <i class="fas fa-history"></i> Back to list
<% end %>
<% end %>

</div>
